{
  "baseUrl": "https://localhost:3000", // Replace with actual URL for deployment
  "title": "My Sample Blog",
  "description": "A demonstration blog generated by HcgBlogGenerator.",
  "language": "en-US",
  "postsPerPage": 5,
  "contentDirectory": "content",
  "templateDirectory": "layouts",
  "includesDirectory": "includes", // Relative to TemplateDirectory
  "staticDirectory": "static",
  "stylesDirectory": "styles",
  "styleEntryPoint": "main.scss",
  "outputDirectory": "_site", // Default output directory name
  "postPermalink": "/blog/:year/:month/:slug/", // Example permalink structure for posts
  "pagePermalink": "/:slug/", // Example permalink structure for pages
  "buildDrafts": false, // Don't build drafts by default
  "buildFutureDated": false, // Don't build future-dated posts
  "tagUrlBasePath": "/tags/",
  "categoryUrlBasePath": "/categories/",
  "rss": {
    "enabled": true,
    "outputPath": "feed.xml",
    "maxItems": 20
  },
  "extraData": { // Example of custom data accessible in templates via site.config.ExtraData
    "authorName": "HCG Developer",
    "socialLinks": {
      "github": "https://github.com/example"
    }
  }
}